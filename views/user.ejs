<!-- account info modal -->
<div class="modal fade" id="changepwd" tabindex="-1" role="dialog" aria-labelledby="changepwd" aria-hidden="true">
  <div class="modal-dialog jusitfy-content-center align-items-center" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">修改密碼</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="needs-validation" action="" method="POST" data-toggle="validator">
          <div class="col form-group">
            <input type="password" class="form-control rounded" id="userpwd" placeholder="*密碼（8-12 字英數）" name="userpwd"
              pattern="^(?!.*[^a-zA-Z0-9])(?=.*\d)(?=.*[a-zA-Z]).{8,12}$" data-error="請填入格式為 8-12 字英數密碼 （至少含一英文字母）"
              required>
            <small class="text-left help-block with-errors text-danger"></small>
          </div>
          <div class="col form-group">
            <input type="password" class="form-control rounded" id="pwdconfirm" placeholder="*請再次輸入密碼" name="pwdconfirm"
              data-match="#userpwd" data-error="請再次輸入密碼" required>
            <small class="text-left help-block with-errors text-danger"></small>
          </div>
          <div class="text-center">
            <input class="col-6 btn btn-primary jusitfy-content-center" type="submit" value="確認送出">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

